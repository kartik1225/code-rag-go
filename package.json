  "bugs": {
    "url": "https://github.com/kartik1225/code-context/issues"
  },
  "homepage": "https://github.com/kartik1225/code-context#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "directory-tree": "^3.5.2",
    "ignore": "^6.0.2",
    "strip-comments": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/strip-comments": "^2.0.4",
    "ts-node": "^10.9.2",
