  "author": "Kartikey Garasiya garasiakartik@gmail.com",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "directory-tree": "^3.5.2",
    "ignore": "^6.0.2",
    "strip-comments": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/strip-comments": "^2.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
